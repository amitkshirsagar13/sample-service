node {    
  def mvnHome = tool name: 'maven'

  /* Set MAVEN_HOME, and special PATH variables. */
  List mvnEnv = [
      "PATH+MVN=${mvnHome}/bin",
      "M2_HOME=${mvnHome}"
  ]
  withEnv(mvnEnv) {
    stage ('Initialize') {
        sh '''
            echo "PATH = ${PATH}"
            echo "M2_HOME = ${M2_HOME}"
        '''
    }
    stage('Git Clone') {
      clone()
    }
    stage('Build') {
      build()
    }
    stage('Deploy') {
      deploy_to dev
      deploy_to test
    }
  }
}
